@import 'variables.styl'
@import 'buttons.styl'

html
	overflow-y: scroll

html,
body
	margin: 0
	padding: 0
	width: 100%
	height: 100%
	color: $white

	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale
	overflow: hidden
	@media print
		overflow: visible
body
	background: $data-background
	position: relative
	height: 100%
	padding-bottom: 200px
	font-size: 14px


	&.modal-open
		height: 100%
		overflow: hidden
a
	text-decoration: none
	cursor: pointer
	color: $dark-blue
	text-decoration: underline


*
	box-sizing: border-box

.content-wrapper
	max-width: 1200px
	margin: 0 auto

.logo-and-info
	padding: 0
	position: absolute
	left: 0
	top: 11px
	left: 10px

.centered
	text-align: center

.content-info
	max-width: 700px
	margin: 0 auto
	text-align: center
	ol,ul
		li
			text-align: left
			color: $dark-blue


.feedback-container
	margin-top: 10px
	margin-bottom: 20px
	padding: 10px
	border-radius: 4px
	text-align: left
	&.success
		background-color: $page-background-blue
	&.centered
		margin: 10px auto 20px auto
	&.fit-content
		max-width: 800px
	&.warning
		background-color: $notification-yellow
	&.error
		background-color: $error-red



.table-controls
	padding-bottom: 40px
	font-size: 1.1em
	&.padded-top
		padding-top: 40px
	&.no-bottom-padding
		padding-bottom: 0
	.margin-left
		margin-left: 10px
	button
		height: 42px

.submit-button
	border: 0
	border-radius: 4px
	background-color: $dark-blue
	color: $light-grey
	text-transform: uppercase
	font-size: 1.1em
	padding: 9px 20px
	margin-left: 14px
	cursor: pointer
	display: inline-block
	text-align: center
	text-decoration: none
	&:hover
		background-color: lighten($dark-blue, 10%)
	&:active
		background-color: darken($dark-blue, 10%)
	&.delete
		background-color: $notification-red
		&:hover
			background-color: lighten($notification-red, 10%)
		&:active
			background-color: darken($notification-red, 10%)
		.fa-remove
			margin-right: 10px
	&.wide
		width: 100%
		margin: 10px 0
		padding: 14px 20px

	&.expand-button
		background-color: $dark-blue
		&:hover
			background-color: lighten($dark-blue, 10%)
			color: white
			text-decoration: none
		&:active
			background-color: darken($dark-blue, 10%)
			color: white
			text-decoration: none
	&:disabled
		background-color: $border-grey

	&.success
		background-color: transparent
		color: $dark-blue

.info-toggle-section
	background-color: $page-background
	padding-top: 40px
	padding-bottom: 40px
	border-bottom: 1px solid $border-grey
	&.no-bottom-padding
		padding-bottom: 0
	.section-header
		margin-top: 0
		margin-bottom: 20px
		font-size: 2em
		color: $header-color
		font-weight: bold
	.section-description
		margin-top: 0
		font-size: 1.2em
		color: $description-color
	.toggles
		&.scrollfix
			&.fixed
				position: fixed
				top: 12px
				left: 0
				width: 100%
				z-index: 100
				border-right: 360px solid transparent
		.input-col
			display: inline-block
			margin-right: 20px
			position: relative
			vertical-align: top
			&.middle
				margin-top: 14px
			&.centered
				text-align: center
				input
					width: 100%
					max-width: 100%


			label
				display: block
				text-align: left
			input, select
				display: block
				margin-left: 0
				margin-right: 0
				&.error
					background-color: $error-red
			.date-picker
				text-align: left
				margin-right: 0


		margin-top: 40px
		padding-top: 10px
		padding-bottom: 10px
		background-color: lighten($page-background, 20%)
		color: $dark-blue
		.transparent-button
			position: absolute
			right: 0
			bottom: 0
			background-color: transparent
			border: 0
			padding: 8px 14px

		.short-date
			min-width: 100px
		label
			font-size: 1.1em
			font-weight: bold
		select
			background-color: white
			border: none
			outline: none
			display: inline
			-moz-text-align-last: left
			text-align-last: left
			padding: 0 0 0 0
			font-weight: bold
			font-size: 1.1em
			margin-left: 4px
			margin-right: 14px
			border: 1px solid $border-grey
			margin-right: 20px

		input,
		.fake-input
			padding: 7px
			margin-left: 4px
			border: 1px solid $border-grey
			font-size: 1.1em
			max-width: 4.5em
			margin-right: 20px
			text-align: left
			background-color: white
			min-height: 37px
			&.error
				background-color: $error-red
			&.short
				max-width: 3.6em



		.fake-input
			background-color: transparent
			border: 0
			max-width: none
			padding-left: 0
			margin-left: 0
			&.short
				max-width: none




.data-section
	background-color: $data-background
	padding-bottom: 140px
	.standard-form
		max-width: 400px
		padding: 20px
		margin: 0 auto
		h3
			font-size: 20px
			margin-bottom: 20px

		label
			font-size: 20px
			margin-right: 10px

		input
			font-size: 20px
			padding: 10px
			background-color: white
			border-radius: 4px
			border: 0
			outline: none
			&.three-digits
				width: 60px
				margin-right: 10px
		textarea
			width: 100%
			padding: 10px
			border-radius: 4px
			border: 1px solid $border-grey
			font-size: 16px
		button
			border: 0
			border-radius: 4px
			background-color: $dark-blue
			color: $light-grey
			text-transform: uppercase
			font-size: 16px
			width: 100%
			padding: 14px
			margin-top: 20px
			transition: all 0.5s linear
			&.success
				background-color: transparent
				color: $dark-blue


	.data-table-wrapper
		padding-top: 40px
		padding-bottom: 40px
	.data-table
		max-width: 100%
		width: 90%
		&.slim
			td
				padding: 0
				span
					padding: 4px
				&:first-child
					padding: 4px 4px 4px 4px
				&.text
					padding: 4px 4px 4px 4px

		&.fixed
			table-layout: fixed

		&.clickable
			tbody
				tr
					cursor: pointer
					&.non-clickable
						cursor: not-allowed
						&:hover
							td
								background-color: inherit
								color: black

					&:hover

						td
							background-color: $dark-blue
							color: white
							&.non-highlight
								background-color: inherit
								color: black
			.non-highlight
				cursor: pointer
				&.delete
					&:hover
						background-color: $notification-red
						color: white



		&.centered
			margin: 0 auto
			border-collapse: collapse
		th
			text-transform: uppercase
			font-size: 1.1em
			text-align: left
			padding: 10px
			border-bottom: 1px solid $border-grey
			text-align: center
			&.right-border
				border-right: 1px solid $border-grey
			&.align-left
				text-align: left


		th:first-child
			border-right: 1px solid $border-grey
		td
			position: relative
			text-align: left
			border-bottom: 1px solid $border-grey

			&.delete
				cursor: pointer
				&:hover
					background-color: $notification-red
					color: white
			&.text
				padding: 10px
			&.center
				text-align: center
			&.right-border
				border-right: 1px solid $border-grey
			&.locked
				background-color: $notification-yellow
				position: relative
				text-align: center
			&.disabled
				background-image: url(/assets/images/stripe.png)
				position: relative
				padding: 20px
				&:after
					content: "Ikke tilgjengelig"
					position: absolute
					left: 50%
					top: 50%
					margin-left: -45px
					margin-top: -13px
					background-color: #f6f9e2
					padding: 6px 10px
					font-size: 10px
					border-radius: 14px
			&.error
				background-color: $error-red
			.number
				padding-top: 10px
				padding-bottom: 10px
				text-align: center
				display: block
				font-weight: bold
				&.no-value
					font-weight: normal
			input
				padding-top: 10px
				padding-bottom: 10px
				background-color: transparent
				text-align: center
				font-size: 1.1em
				border: 0
				outline: none
				font-weight: bold
				width: 100%
			.delivered-info
				position: absolute
				left: 50%
				margin-left: -88px
				bottom: 100%
				color: $dark-blue
				width: 176px
				font-size: 0.9em
				background-color: $dark-blue
				border-radius: 4px
				pointer-events: none
				.delivered-info-return-number
					float: right
					font-weight: bold
				&:after
					content: ""
					width: 0
					height: 0
					border-left: 4px solid transparent
					border-right: 4px solid transparent
					border-top: 6px solid $dark-blue
					position: absolute
					top: 100%
					left: 50%
					margin-left: -2px
				ul
					list-style: none
					padding: 4px
					margin: 0
					li
						display: block
						color: white
						padding: 4px

		td:first-child
			font-size: 1.1em
			font-weight: bold
			border-right: 1px solid $border-grey
			padding: 0 10px 0 10px

		tbody
			tr:nth-child(even)
				background-color: white
			&.striped-tbody
				background-color: white
				&:nth-child(even)
					background-color: white

				tr
					background-color: transparent;


.page-header
	width: 100%
	background-color: $dark-blue
	border-bottom: 1px solid $info-bar-header
	padding: 0 0 0 10px
	position: relative
	z-index: 2
	margin: 0

.logo
	color: white
	font-size: 1.2em
	display: inline-block
	transform: translateY(8px)
	position: relative
	z-index: 101
	img
		width: 140px
		height: 26px

.login-wrapper
	position: relative
	width: 100%
	min-height: 400px
	padding-top: 60px
	padding-bottom: 60px
	display: table
	text-align: center
	.login-inner
		display: table-cell
		vertical-align: middle

.login-inner
	.form-avisretur-logo
		color: $dark-blue
		text-align: center

.footer-backdrop
	position: fixed
	top: 0
	left: 0
	width: 100%
	height: 100%
	background-color: rgba(0,0,0,0.3)
	visibility: hidden
	z-index: 3
	opacity: 0
	transition: opacity 0.25s ease-in
	&.visible
		visibility: visible
		opacity: 1


.footer
	position: fixed
	width: 100%
	height: 75%
	left: 0
	top: 100%
	background-color: rgba(0,0,0,0.2)
	z-index: 3
	display: block
	box-shadow: 0 0 60px rgba(0,0,0, 0.4)
	transition: top 0.5s ease-in-out
	&.visible
		top: 25%

	.footer-inner
		background-color: $dark-blue
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 100%
		z-index: 3
		display: block


	.open-questions-button
		position: absolute
		left: 40px
		top: -40px
		background-color: $dark-blue
		color: white
		text-transform: uppercase
		border: 0
		padding: 11px 20px
		border-top-left-radius : 10px
		border-top-right-radius : 10px
		letter-spacing: 1px
		outline: none
		cursor: pointer
		&:hover
			background-color: lighten($dark-blue, 10%)
		&:active
			background-color: darken($dark-blue, 10%)
		span
			margin-right: 10px


	.left-footer-col
		display:inline-block
		width: 49%
		text-align: center
		vertical-align: top
		padding: 30px 15px 30px 30px

	.right-footer-col
		display: inline-block
		width: 50%
		display: inline-block
		vertical-align: top
		height: 100%
		max-height: 100%
		padding: 30px 30px 30px 15px
		.footer-col
			overflow-x: hidden
			overflow-y: auto
			max-height: 100%


	.footer-col
		padding: 16px 20px
		display: block
		color: $light-grey
		text-align: left
		vertical-align: top
		margin: 0 auto
		background-color: lighten($dark-blue, 10%)
		&:nth-child(1)
			margin-bottom: 30px
		.footer-col-header
			font-size: 2em
			margin-top: 0
			margin-bottom: 14px
		.link-button
			display: block
			text-align: center
			color: $light-grey
			background-color: $light-blue
			padding: 6px
			border-radius: 4px
			text-decoration: none
		.footer-col-list
			list-style: none
			padding: 0
			margin: 0
			li
				font-size: 1.2em
				margin-top: 8px
				margin-bottom: 8px
				span
					margin-right: 10px
				a
					color: $light-grey
					font-weight: bold



.data-table-info
	font-size: 1em
	margin-bottom : 10px
	.blue-text-info
		color: $dark-blue



.login-form
	padding: 40px
	border-radius: 4px
	background-color: white

	.form-row
		text-align: left
		margin-bottom: 20px
		&.no-margin
			margin: 0
			.submit-button
				margin-left: 0
		.find-retail-number
			text-align: right
			color: $dark-blue
			padding: 4px 0 0 0
			cursor: pointer
			&:hover
				text-decoration: underline
		.find-password
			text-align: right
			color: $dark-blue
			padding: 4px 0 0 0

		label
			display: block
			color: $dark-blue
			text-transform: uppercase
			font-size: 1em
			text-align: left
			margin-bottom: 5px

		input
			padding: 6px
			color: $dark-blue
			text-transform: uppercase
			text-align: left
			width: 100%
			font-size: 20px

		.submit-button
			border: 0
			border-radius: 4px
			background-color: $dark-blue
			color: $light-grey
			text-transform: uppercase
			font-size: 16px
			width: 100%
			padding: 14px


.main-view
	position: absolute
	left: 0
	top: 0
	width: 100%
	height: 100%
	border-top: 68px solid transparent
	z-index: 1
	//overflow: hidden
	.main-rows
		position: absolute
		left: 0
		top: 0
		width: 100%
		height: 100%
		transition: width 0.25s ease-out
		overflow-x: hidden
		overflow-y: auto
		border-right: 0
		&.seventy
			border-right: 360px solid transparent
	@media print
		.main-rows
			border-right: 0 !important
			overflow-y: visible
			height: auto

.info-bar
	position: absolute
	height: 100%
	background-color: $info-bar-background
	text-align: center
	width: 360px
	right: -360px
	top: 0
	height: 100%
	transition: right 0.25s ease-out
	overflow: auto
	padding-bottom: 60px
	z-index: 100
	&.thirty
		right: 0
	.info-bar-header
		background-color: $info-bar-header
		color: rgba(white, 0.7)
		font-size: 1em
		letter-spacing: 1px
		font-weight: 400
		margin: 0
		text-transform: uppercase
		padding: 14px 20px 14px 10px
		text-align: left
		.round-label
			display: inline-block
			background-color: lighten($info-bar-header, 20%)
			padding: 7px
			border-radius: 50%
			width: 30px
			height: 30px
			text-align: center
			margin-right: 10px
	.info-bar-list
		list-style: none
		padding: 0
		margin: 0
		color: white
		a
			color: white
			text-decoration: none
		li
			text-align: left
			padding: 10px
			width: 100%
			white-space: nowrap
			overflow: hidden
			text-overflow: ellipsis
			cursor: pointer
			&:hover
				background-color: lighten($info-bar-header, 10%)
			.fa
				margin-right: 10px
			.from
				display: inline-block
				background-color: $info-bar-header
				padding: 4px 10px
				border-radius: 10px
				margin-right: 10px
	.info-bar-table
		border-collapse: collapse
		margin-bottom: 30px
		width: 100%
		table-layout: fixed
		a
			color: $border-grey
			text-decoration: none

		.icon-cell
			width: 30px
		th,
		td
			padding: 6px
			color: $border-grey
			&.ellipsis
				overflow: hidden
				white-space: nowrap
				text-overflow: ellipsis
		th
			text-transform: uppercase
			opacity: 0.5
			text-align: center



		tbody
			tr
				cursor: pointer
				&:hover
					background-color: lighten($info-bar-header, 10%)
					color: white
					a
						color: white



.main-menu
	text-align: right
	position: relative
	z-index: 100
	.top-level-list
		list-style: none
		padding:0
		margin:0
		.top-level-item-container
			display: inline-block
			position: relative
			&.logged-in
				border-left: 1px solid $info-bar-header

			.top-level-item
				position: relative
				text-decoration: none
				color: $data-background
				background-color: $dark-blue
				//text-transform: uppercase
				display: block
				padding: 25px 22px 22px 20px
				font-size: 1em
				cursor: pointer
				text-transform: uppercase
				@media $mobile
					font-size: 1.3em
					padding-top: 13px
					.top-level-title
						display: none
					.sub-level-item
						font-size: 1em
				a
					color: $data-background

				.fa
					margin-right: 10px
					transition: transform 0.1s ease-in-out
				.counter-circle
					display: inline-block
					background-color: $notification-red
					border-radius: 50%
					color: white
					width: 19px
					height: 19px
					text-align: center
					margin-left: 10px
					font-size: 0.8em
					vertical-align: top
					padding-top: 1px
				a
					text-decoration: none
				&:hover
					background-color: darken($dark-blue, 20%)
					color: white
					.fa
						transform: scale(1.4)
						transition: transform 0.1s ease-in-out
					.counter-circle
						background-color: white
						color: $dark-blue
					.sub-level-list
						display: block
					&.include-arrow
						&:after
							border-top-color: white

				&:active
					background-color: lighten($dark-blue, 10%)
					color: white
					.fa
						transform: scale(1.4)
						transition: transform 0.1s ease-in-out
					.counter-circle
						background-color: white
						color: $dark-blue
					.sub-level-list
						display: block
					&.include-arrow
						&:after
							border-top-color: white

				&.include-arrow
					padding-right: 30px
					&:after
						top: 50%
						right: 14px
						border: solid transparent
						content: " "
						height: 0
						width: 0
						position: absolute
						pointer-events: none
						border-color: rgba(255, 255, 255, 0)
						border-top-color: $data-background
						border-width: 5px
						margin-left: -14px
						margin-top: -2px

			.sub-level-list
				list-style: none
				padding: 0
				margin: 0
				top: 100%
				right: 0
				cursor: pointer
				white-space: nowrap
				background-color: $info-bar-header
				min-width: 170px
				position: absolute
				display: none
				.sub-level-item-container
					display: block
					cursor: pointer
					.sub-level-item
						display: block
						padding: 10px
						color: white
						cursor: pointer
						font-size: 1em
						//text-transform: uppercase
						cursor: pointer
						&:hover
							background-color: darken($dark-blue, 20%)
							cursor: pointer
						&:active
							background-color: lighten($dark-blue, 20%)


.info-section
	display: block
	padding: 20px

	.info-section-menu-wrapper
		display: inline-block
		position: relative
		width: 30%
		padding-right: 40px

		text-align: right
		&:after
			content: ""
			position: absolute
			right: 20px
			top: 0
			width: 1px
			height: 100%
			background-color: rgba($dark-blue, 0.2)
	.info-section-docs-wrapper
		display: inline-block
		width: 69%
		padding: 0 10px 0 10px
		text-align: left
		vertical-align: top
		font-size: 14px
		.info-section-docs
			max-width: 650px
			.info-section-docs-header
				margin-top: 0
			p
				font-size: 1.2em
			p:first-child
				margin-top: 0
			table
				td
					padding: 10px
					border-bottom: 1px solid $border-grey
				tr:nth-child(odd)
					background-color: white

.info-section-menu-wrapper
	ul
		list-style: none
		padding: 0
		margin: 0
		li
			text-align: left
			display: block
		a
			display: block
			text-decoration: none

	.info-section-menu
		display: inline-block
		.info-section-menu-title
			font-size: 1.2em
			font-weight: bold
			a
				color: $dark-blue
				padding: 4px 10px


	.info-section-menu-sub-menu
		.info-section-menu-sub-menu-title
			font-size: 0.9em
			font-weight: normal
			a
				color: $dark-blue
				padding: 4px 10px 4px 30px



.login-page-wrapper
	max-width: 1100px
	margin: 0 auto
